{
  "name": "sipgateio-boilerplate",
  "version": "1.0.0",
  "description": "A template for new sipgate.io projects containing Prettier, ESLint, Husky and TypeScript configuration files",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node .",
    "fix:lint": "eslint src --ext .ts,.js --fix",
    "test:lint": "eslint src --ext .ts,.js",
    "test:format": "prettier --check .",
    "fix:format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sipgate-io/sipgateio-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sipgate-io/sipgateio-boilerplate/issues"
  },
  "homepage": "https://github.com/sipgate-io/sipgateio-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "ts-node": "^10.4.0"
  }
}
